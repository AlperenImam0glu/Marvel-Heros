<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardItemView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardBackgroundColor="@color/primary_black"
        android:layout_marginRight="12dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout"
            android:layout_width="140dp"
            android:layout_height="230dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cardSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="2dp"
                android:fontFamily="@font/gilroy_medium"
                android:text="Peter Parker"
                android:textColor="@color/primary_white"
                android:shadowColor="@color/primary_dark"
                android:shadowDx="5"
                android:shadowDy="5"
                android:shadowRadius="10"
                android:textSize="@dimen/card_subtitle_size"
                app:layout_constraintBottom_toTopOf="@+id/cardTitle"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/cardTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="12dp"
                android:maxLines="2"
                android:text="Homem Aranha"
                android:fontFamily="@font/gilroy_heavy"
                android:textSize="@dimen/card_title_size"
                android:textColor="@color/primary_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>