<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primary_black"
        tools:context=".view.CharacterDetailPageFragment">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationZ="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="24dp"
                >
                <ImageView
                    android:id="@+id/icon_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/back"
                    app:tint="@color/primary_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="495dp"
                    android:layout_height="812dp"
                    android:foreground="@drawable/black_shadow"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_name_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="356dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:text="Peter Parker"
                    android:textColor="@color/primary_grey"
                    android:textSize="@dimen/profile_subtitle_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_name_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:fontFamily="@font/gilroy_heavy"
                    android:maxLines="2"
                    android:text="SPÄ°DER MAN"
                    android:textColor="@color/white"
                    android:textSize="@dimen/profileTitle_size"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_name_subtitle" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="48dp"
                    android:layout_marginEnd="24dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_name_title">

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/age"
                        app:tint="@color/primary_grey"
                        app:layout_constraintEnd_toStartOf="@+id/img2"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"
                        app:layout_constraintStart_toStartOf="parent"></ImageView>

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/weight"
                        app:tint="@color/primary_grey"
                        app:layout_constraintEnd_toStartOf="@+id/img3"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/img1"
                        ></ImageView>

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/height"
                        app:tint="@color/primary_grey"
                        app:layout_constraintEnd_toStartOf="@+id/img4"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/img2"
                        app:layout_constraintTop_toTopOf="parent"></ImageView>

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/universe"
                        app:tint="@color/primary_grey"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toEndOf="@+id/img3"
                        app:layout_constraintTop_toTopOf="parent"></ImageView>

                    <TextView
                        android:id="@+id/text_series_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="78kg"
                        android:textColor="@color/primary_white"
                        android:textSize="@dimen/ability_text_size"
                        app:layout_constraintEnd_toEndOf="@+id/img2"
                        app:layout_constraintStart_toStartOf="@+id/img2"
                        app:layout_constraintTop_toBottomOf="@+id/img2" />

                    <TextView
                        android:id="@+id/text_comics_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="30 years"
                        android:textColor="@color/primary_white"
                        android:textSize="@dimen/ability_text_size"
                        app:layout_constraintEnd_toEndOf="@+id/img1"
                        app:layout_constraintStart_toStartOf="@+id/img1"
                        app:layout_constraintTop_toBottomOf="@+id/img1" />

                    <TextView
                        android:id="@+id/text_events_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="1.80m"
                        android:textColor="@color/primary_white"
                        android:textSize="@dimen/ability_text_size"
                        app:layout_constraintEnd_toEndOf="@+id/img3"
                        app:layout_constraintStart_toStartOf="@+id/img3"
                        app:layout_constraintTop_toBottomOf="@+id/img3" />

                    <TextView
                        android:id="@+id/text_stories_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/gilroy_medium"
                        android:text="Terra 616"
                        android:textColor="@color/primary_white"
                        android:textSize="@dimen/ability_text_size"
                        app:layout_constraintEnd_toEndOf="@+id/img4"
                        app:layout_constraintStart_toStartOf="@+id/img4"
                        app:layout_constraintTop_toBottomOf="@+id/img4" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginRight="24dp"
                    android:fontFamily="@font/gilroy_medium"
                    android:textColor="@color/primary_grey"
                    android:textSize="@dimen/description_text_size"
                    android:text="@string/desc"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout2" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/gilroy_bold"
                    android:text="ABILITIES"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/section_title_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView7">

                </TextView>

                <TextView
                    android:id="@+id/text_comics_bar"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:alpha="0.75"
                    android:fontFamily="@font/gilroy_regular"
                    android:text="Comics"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/ability_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />


                <TextView
                    android:id="@+id/text_events_bar"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:alpha="0.75"
                    android:fontFamily="@font/gilroy_regular"
                    android:text="Events"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/ability_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_comics_bar" />

                <TextView
                    android:id="@+id/text_series_bar"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:alpha="0.75"
                    android:fontFamily="@font/gilroy_regular"
                    android:text="Series"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/ability_text_size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_events_bar" />

                <TextView
                    android:id="@+id/text_stories_bar"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="100dp"
                    android:alpha="0.75"
                    android:fontFamily="@font/gilroy_regular"
                    android:text="Stories"
                    android:textColor="@color/primary_white"
                    android:textSize="@dimen/ability_text_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_series_bar" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_comics"
                    android:layout_width="0dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="45dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/text_comics_bar"
                    app:layout_constraintTop_toBottomOf="@+id/textView3" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>